<Window x:Class="LightBuzz.Vituvius.Samples.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightBuzz.Vituvius.Samples.WPF"
        mc:Ignorable="d"
        Title="Vitruvius"
        Icon="/Assets/VitruviusIcon.ico"
        Height="950" Width="1400"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Background.jpg" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Frame Grid.Row="0" Name="frame" NavigationUIVisibility="Hidden" />

        <Grid Grid.Row="1">
            <Button Style="{StaticResource ButtonTileStyle}" Padding="0" FontSize="12" FontWeight="Normal" Content="Get Vitruvius ›" Click="Purchase_Click" />
        </Grid>
    </Grid>
</Window>
